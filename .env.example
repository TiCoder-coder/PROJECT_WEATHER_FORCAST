# =====================================================
# VN Weather Hub - Environment Variables Template
# =====================================================
# Copy file nay thanh .env va dien thong tin cua ban
# cp .env.example .env
# =====================================================

# Django Secret Key (co the giu nguyen hoac tao moi)
SECRET_KEY=django-insecure-your-secret-key-here

# =====================================================
# MongoDB Configuration
# =====================================================
# Chay Docker truoc: docker-compose up -d
# Mac dinh su dung MongoDB replica set local
MONGO_URI=mongodb://localhost:27110/Login?directConnection=true
DB_NAME=Login

# =====================================================
# Security Configuration
# =====================================================
MAX_FAILED_ATTEMPS=5
LOCKOUT_SECOND=600
RESET_TOKEN_SALT=manager-reset-salt
RESET_TOKEN_EXPIRY_SECONDS=3600
PASSWORD_PEPPER=your-password-pepper-here

# =====================================================
# JWT Configuration
# =====================================================
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=604800
JWT_ISSUER=weather_api
JWT_AUDIENCE=weather_web

ACCESS_TOKEN_EXPIRE_HOURS=3
REFRESH_TOKEN_EXPIRE_DAYS=1

# =====================================================
# Admin Account (se duoc tao khi chay insert_first_data)
# =====================================================
USER_NAME_ADMIN=Admin
ADMIN_PASSWORD=Admin@123456
ADMIN_EMAIL=admin@example.com

# =====================================================
# Email Configuration (OPTIONAL)
# =====================================================
# Neu khong cau hinh, OTP se in ra console thay vi gui email
# 
# De gui email that, chon 1 trong 2 cach:
#
# CACH 1: Gmail SMTP (can tao App Password)
# - Bat 2-Step Verification: https://myaccount.google.com/signinoptions/two-step-verification
# - Tao App Password: https://myaccount.google.com/apppasswords
#
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-16-char-app-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=VN Weather Hub <your-email@gmail.com>
#
# CACH 2: De trong - OTP se in ra console (development mode)
# Khong can cau hinh gi them

# =====================================================
# OTP Configuration
# =====================================================
PASSWORD_RESET_OTP_EXPIRE_SECONDS=600
PASSWORD_RESET_OTP_MAX_ATTEMPTS=5

# =====================================================
# Resend API (OPTIONAL - thay the SMTP)
# =====================================================
# Dang ky tai: https://resend.com
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
# RESEND_FROM_EMAIL=onboarding@resend.dev